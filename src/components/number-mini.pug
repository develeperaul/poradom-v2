mixin number-mini(numb, before,after, after2)
  div(class=' text-yellow font-reformagrotesk flex items-end')&attributes(attributes)
    if before
      span(class=" text-5.25-5xl xl:text-8xl mb-4") #{before}
    span(class=" text-8xl xl:text-9.75xl flex")= numb
      if after && after2 == null
        span(class="text-2xl xl:text-4xl") #{after} 
      else if after && after2
        span(class="text-2xl xl:text-4xl") #{after} <br> #{after2}.